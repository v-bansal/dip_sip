# Copy this file to .streamlit/secrets.toml and fill in your values.
# secrets.toml is excluded from git by .gitignore.

# Authentication (streamlit-authenticator)
auth_cookie_name = "dip_sip_auth"
auth_cookie_key = "random_signature_key_here"  # Generate with: import secrets; secrets.token_hex(16)
auth_cookie_expiry_days = 30

# Supabase (online deployment)
# Get these from your Supabase project settings -> API
SUPABASE_URL = "https://your-project.supabase.co"
SUPABASE_KEY = "your-anon-key-here"

